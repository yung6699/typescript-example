{
  "compilerOptions": {
    "strict": true,
    // "strictFunctionTypes": false,
    "allowJs": true,
    "target": "ES5",
    "outDir": "./dist",
    // "moduleResolution": "Node",
    "module": "commonjs",
    "rootDir": "src",
    "noImplicitAny": true,
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}